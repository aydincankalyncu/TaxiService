@model TaxiServiceWebUI.Areas.Admin.Models.ResortAddViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Resort Ekleme Formu</h3>
    </div>

    <form class="form-horizontal" asp-controller="Resort" asp-action="Add" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Resort.FromId">Nereden</label>
                <div class="col-sm-10">
                    <select class="form-control select2-blue" asp-for="Resort.FromId" asp-items="@ViewBag.Addresses">
                        <option selected disabled>Seçiniz</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Resort.ToId">Nereye</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="Resort.ToId" asp-items="@ViewBag.Addresses">
                        <option selected disabled>Seçiniz</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Resort.Price">Fiyat</label>
                <div class="col-sm-10">
                    <input type="number" asp-for="Resort.Price" class="form-control" placeholder="Fiyat giriniz.">
                </div>
            </div>
            <div class="form-group row">
                <br />
                <label class="col-sm-2 col-form-label" asp-for="Resort.ImagePath">Eklemek istediğiniz resmi seçiniz.     </label>

                <input class="form-control" type="file" name="file" width="80" />


            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Kaydet</button>
            <a href="@Url.Action("Index","Resort", new { area = "Admin" })" class="btn btn-default float-right">Geri Dön</a>
        </div>
    </form>
</div>