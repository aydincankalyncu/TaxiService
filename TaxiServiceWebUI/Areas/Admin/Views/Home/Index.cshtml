@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .carousel-inner {
            margin-left:30px;
        }
        .main-div {
            margin-top:50px;
            height: 700px;
            width: 70%;
            padding-left: 448px;
        }
        .pageTitle{
            text-align:center;
            font-size:40px;
            font-weight:bold;
        }
    </style>
</head>
<div class="pageTitle">Innsbruck Taxi Admin Paneli</div>
<div class="main-div">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/Slider/slider1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Slider/slider2.png" alt="Second slide">

            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/Slider/slider3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
