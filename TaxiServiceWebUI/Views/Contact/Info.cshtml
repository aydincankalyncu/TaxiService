@model TaxiServiceWebUI.Models.ContactSendMailViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../images/main/mercedes_iletisim.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">@localizer["Home"] <i class="ion-ios-arrow-forward"></i></a></span> <span>@localizer["Contact"] <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">@localizer["Contactus"]</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info justify-content-center">
            <div class="col-md-8">
                <div class="row mb-5">
                    <div class="col-md-4 text-center py-4">
                        <div class="icon">
                            <span class="icon-map-o"></span>
                        </div>
                        <p>
                            <span>@localizer["Address"]:</span>Innsbruck - Wetterhenweg
                        </p>
                    </div>
                    <div class="col-md-4 text-center border-height py-4">
                        <div class="icon">
                            <span class="icon-mobile-phone"></span>
                        </div>
                        <p><span>@localizer["Phone"]:</span> <a href="#">004366499398308</a></p>
                    </div>
                    <div class="col-md-4 text-center py-4">
                        <div class="icon">
                            <span class="icon-envelope-o"></span>
                        </div>
                        <p><span>@localizer["Email"]:</span> <a href="#">infoinnsbrucktaxi@gmail.com</a></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row block-9 justify-content-center mb-5">
            <div class="col-md-8 mb-md-5">
                <h2 class="text-center">@localizer["IfQuestion"] <br>@localizer["PleaseLabel"]</h2>
                <form asp-controller="Contact" asp-action="SendMail" method="post" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <input type="text" asp-for="ContactDTO.Name" class="form-control" placeholder="@localizer["Name"]">
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="ContactDTO.Name"></span>
                    </div>
                    <div class="form-group">
                        <input type="email" asp-for="ContactDTO.Email" class="form-control" placeholder="@localizer["EmailPlaceHolder"]">
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="ContactDTO.Email"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="ContactDTO.Subject" class="form-control" placeholder="@localizer["Subject"]">
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="ContactDTO.Subject"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="ContactDTO.Message" cols="30" rows="7" class="form-control" placeholder="@localizer["Message"]"></textarea>
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="ContactDTO.Message"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@localizer["SendMessage"]" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div id="map2" class="bg-white">
                    <iframe style="width: 100%;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d122471.10638643986!2d11.284551893229471!3d47.28982240608583!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479d6ecfe1f8ca73%3A0x9d201c7d281d9b0d!2s%C4%B0nnsbruck%2C%20Avusturya!5e0!3m2!1str!2str!4v1602192432991!5m2!1str!2str" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>