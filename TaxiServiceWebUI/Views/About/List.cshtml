@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../images/main/mercedes_hakkimizda.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index","Home")">@localizer["Home"] <i class="ion-ios-arrow-forward"></i></a></span> <span>@localizer["About"] <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">@localizer["Aboutus"]</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section services-section ftco-no-pt ftco-no-pb">
    <div class="container">
        <br />
        @localizer["AboutusLabel"]
    </div>

</section>
<section class="ftco-section services-section ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading"></span>
                <h2 class="mb-2">@localizer["OurServices"]</h2>
                <hr />
            </div>
        </div>
        <div class="row d-flex">
            <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon"><span class="icofont-price"></span></div>
                            <h3 class="heading mb-0 pl-3">
                                @localizer["BestPrice"]
                            </h3>
                        </div>
                        <p>@localizer["PriceLabel"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon"><span class="icofont-card"></span></div>
                            <h3 class="heading mb-0 pl-3">@localizer["FixedPrice"]</h3>
                        </div>
                        <p>@localizer["FixedPriceLabel"]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services">
                    <div class="media-body py-md-4">
                        <div class="d-flex mb-3 align-items-center">
                            <div class="icon"><span class="icofont-pay"></span></div>
                            <h3 class="heading mb-0 pl-3">@localizer["DirectPayment"]</h3>
                        </div>
                        <p>@localizer["DirectPaymentLabel"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>